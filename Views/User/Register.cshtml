@model Expense_Tracker.Models.User


<body class="h-ful w-full bg-zinc-600">

    <div class="w-4/6 h-[560px] mx-auto flex rounded-3xl bg-white p-2">
        <div class="w-3/6">
            <img src="~/Revenue-cuate.png"/>
        </div>

        <div class="flex flex-column align-content-center mx-auto my-4">
            <div class="flex-column mx-auto mb-6">
                <img class="h-12 w-12 mx-auto" src="~/logo.png"/>
                <h3 class="text-zinc-800 text-md font-bold">Cadastro do usuário</h3>
            </div>
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group p-2">
                    <label asp-for="UserName" class="text-zinc-600 text-sm font-semibold">Nome</label>
                    <input asp-for="UserName" class="form-control h-12 rounded-lg mb-2"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group p-2">
                    <label asp-for="Email" class="text-zinc-600 text-sm font-semibold">E-mail</label>
                    <input asp-for="Email" class="form-control h-12 rounded-lg mb-2"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group p-2">
                    <label asp-for="PasswordHash" class="text-zinc-600 text-sm font-semibold">Senha</label>
                    <input asp-for="PasswordHash" class="form-control w-96 h-12 rounded-lg mb-2" type="password"/>
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>


                <button type="submit" class="w-full rounded-3xl text-white font-bold mt-2 h-12 bg-green-600">Cadastrar</button>
                <div class="flex flex-column mt-2">
                    <span class="text-md mx-auto text-zinc-600 font-semibold">Já é cadastrado?</span>
                    <a class="mx-auto font-bold text-zinc-800" href="login">Entrar</a>
                </div>
            </form>
        </div>    
        
    </div>

</body>
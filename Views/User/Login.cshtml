@model Expense_Tracker.Models.Login


<body class="h-ful w-full bg-zinc-600">

    <div class="w-4/6 h-[560px] mx-auto flex rounded-3xl bg-white p-2">
        <div class="w-3/6">
            <img src="~/Revenue-cuate.png"/>
        </div>
        
        <div class="flex flex-column align-content-center mx-auto my-4">
            <div class="flex-column mx-auto mb-6">
                <img class="h-12 w-12 mx-auto" src="~/logo.png"/>
                <h3 class="text-zinc-800 text-md font-bold">Acesso ao sistema</h3>
            </div>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group p-2">
                    <label asp-for="Email" class="text-zinc-600 text-sm font-semibold"></label>
                    <input asp-for="Email" class="form-control h-12 rounded-lg my-2"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group p-2">
                    <label asp-for="Password" class="text-zinc-600 text-sm font-semibold"></label>
                    <input asp-for="Password" class="form-control w-96 h-12 rounded-lg my-2" type="password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input"/>
                        <label asp-for="RememberMe" class="form-check-label text-zinc-600 text-sm font-semibold">Manter conectado</label>
                    </div>
                </div>

                <button type="submit" class="w-full mt-6 rounded-3xl text-white font-bold h-12 bg-green-600">Login</button>
                <div class="flex flex-column mt-6">
                    <span class="text-md mx-auto text-zinc-600 font-semibold">NÃ£o tem uma conta?</span>
                    <a class="mx-auto font-bold text-zinc-800" href="register">Registrar</a>
                </div>
                
            </form>
        </div>
        
    </div>

</body>